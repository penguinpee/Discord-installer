[Unit]
Description=Updating Discord
Requires=network-online.target
After=network-online.target

[Service]
Type=oneshot
RemainAfterExit=no
ExecStart=/usr/libexec/discord-installer/build.sh Discord discord "https://discord.com/api/download?platform=linux&format=tar.gz"

[Install]
WantedBy=graphical.target
